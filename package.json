{
  "name": "comment-magic",
  "description": "Converts lazily written `///` comments into multiline comments.",
  "version": "0.2.3",
  "main": "dist/src/index.js",
  "types": "dist",
  "bin": {
    "commag": "dist/src/index.js"
  },
  "scripts": {
    "dev": "npx ts-node -r tsconfig-paths/register ./src/index.ts",
    "start": "node ./dist/src/index.js",
    "build-old": "tsc -p . --outDir ./dist",
    "build": "tsc -p tsconfig.json && tsc-alias",
    "clean": "rimraf dist coverage",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest -c ./jest.unit.json --passWithNoTests",
    "test:coverage": "jest --coverage -c ./jest.unit.json --passWithNoTests",
    "test:watch": "jest --watch",
    "prepare": "husky install"
  },
  "author": "Jaron Fort",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.12.7",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "@typescript-eslint/type-utils": "^7.6.0",
    "@typescript-eslint/utils": "^7.6.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsconfig-paths": "^4.2.0",
    "tscpaths": "^0.0.9",
    "typescript": "^5.4.5"
  },
  "dependencies": {
    "boxen": "^7.1.1",
    "chalk": "^4.0.0",
    "commander": "^12.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jaronfort/comment-magic.git"
  }
}
